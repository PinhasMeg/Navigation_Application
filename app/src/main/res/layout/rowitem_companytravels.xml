<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <EditText
            android:id="@+id/clientName"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:padding="8dp"
            android:text="Name"
            android:textSize="10sp"/>



        <EditText
            android:id="@+id/Begin_date"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="Date of departure"
            android:textSize="10sp" />
        <EditText
            android:id="@+id/End_date"
            android:text="End date"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

       <EditText
        android:id="@+id/Num_of_passengers"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:text="Number of passengers"
        android:textSize="10sp" />

        <TextView
            android:id="@+id/Application_date"
            android:text="Date of application"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:textSize="10dp" />

        <Spinner
            android:id="@+id/Travel_society"

            android:layout_width="90dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/Accepted_society"
            android:text="validate society"
            android:textSize="10dp"
            android:layout_width="90dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/Accepted_travel"
            android:text="validate travel"
            android:textSize="10dp"
            android:layout_width="90dp"
            android:layout_height="50dp" />
    <Button
        android:id="@+id/Finished_travel"
        android:text="Finish travel"
        android:textSize="10dp"
        android:layout_width="90dp"
        android:layout_height="50dp" />

    </LinearLayout>
